@model IEnumerable<AspIndAssignment1.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<div class="bs-docs-section">

        <div class="row">
          <div class="col-lg-12">
            

            <div class="bs-example table-responsive">
              <table class="table table-striped table-bordered table-hover">
    
                <tbody>
                 @foreach (var item in Model)
                 {
                     
                     <tr>
                    <td>
                        <form name="button" action="/home/Add/" method="post"  role="form">
                            <input class="btn btn-default" type="submit" value ="Add to Cart"/> <input type="hidden" id="productID" 
                                name="productID" value="@Html.DisplayFor(modelItem => item.productID)"/>
                                </form>
                       </td>
                    <td> @Html.DisplayFor(modelItem => item.productID)</td>
                    <td><img src="~/Content/img/@Html.DisplayFor(modelItem => item.productID)picture.jpg" class="img_padding" width="40" height="40"/> @Html.DisplayFor(modelItem => item.productName)</td>
                    <td> @Html.DisplayFor(modelItem => item.price)</td>
                  </tr>
                 }

                </tbody>
              </table>
                    
            </div><!-- /example -->
              </div>
          </div>
        </div>
      </div>